# LLM Provider Configuration
LLM_PROVIDER=anthropic  # Options: 'openai', 'anthropic', or 'gemini'

# OpenAI API Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Configuration (if using Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API Configuration (if using Gemini)
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Adjust cognitive loop timing (milliseconds)
COGNITIVE_CYCLE_MS=5000
VISUAL_PERCEPT_INTERVAL_MS=3000
AUDIO_PERCEPT_MIN_MS=7000
AUDIO_PERCEPT_MAX_MS=10000
